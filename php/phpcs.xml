<?xml version="1.0"?>
<ruleset name="sconfig">
    <description>Coding standard for sconfig (PHP)</description>

    <!-- Check all PHP files in src directory -->
    <file>src</file>
    <file>example.php</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show colors -->
    <arg name="colors"/>

    <!-- Show warnings -->
    <arg value="w"/>
</ruleset>

